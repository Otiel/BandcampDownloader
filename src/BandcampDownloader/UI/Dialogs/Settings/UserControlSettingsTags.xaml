<UserControl
    x:Class="BandcampDownloader.UI.Dialogs.Settings.UserControlSettingsTags"
    x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:validation="clr-namespace:BandcampDownloader.UI.Validation"
    xmlns:core="clr-namespace:BandcampDownloader.Core"
    Width="410"
    Height="280"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="BandcampDownloader"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    KeyboardNavigation.TabNavigation="Local"
    mc:Ignorable="d">
    <Grid x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition Height="26" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid x:Name="GridFileNameFormat" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                x:Name="LabelFileNameFormat"
                Grid.Column="0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=TextBoxFileNameFormat}" />
            <TextBox
                x:Name="TextBoxFileNameFormat"
                Grid.Column="1"
                Height="20"
                Margin="0,0,5,0"
                VerticalContentAlignment="Center"
                TabIndex="0"
                TextChanged="TextBox_TextChanged"
                ToolTip="{lex:Loc}"
                ToolTipService.ShowDuration="60000">
                <Binding Path="FileNameFormat" UpdateSourceTrigger="Explicit">
                    <Binding.ValidationRules>
                        <validation:Mp3ExtensionRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </Grid>
        <CheckBox
            x:Name="CheckBoxModifyTags"
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{lex:Loc}"
            IsChecked="{Binding ModifyTags, UpdateSourceTrigger=Explicit}"
            TabIndex="1"
            ToolTip="{lex:Loc}"
            ToolTipService.ShowDuration="60000" />
        <Grid
            x:Name="GridTags"
            Grid.Row="2"
            Margin="18,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
            </Grid.RowDefinitions>
            <Label
                x:Name="LabelArtist"
                Grid.Row="0"
                Grid.Column="0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=ComboBoxArtist}" />
            <lex:EnumComboBox
                x:Name="ComboBoxArtist"
                Grid.Row="0"
                Grid.Column="1"
                Width="120"
                Height="22"
                HorizontalAlignment="Left"
                IsEnabled="{Binding ElementName=CheckBoxModifyTags, Path=IsChecked}"
                PrependType="True"
                SelectedItem="{Binding TagArtist, UpdateSourceTrigger=Explicit}"
                TabIndex="2"
                Type="{x:Type core:TagEditAction}" />
            <Label
                x:Name="LabelTrackNumber"
                Grid.Row="1"
                Grid.Column="0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=ComboBoxTrackNumber}" />
            <lex:EnumComboBox
                x:Name="ComboBoxTrackNumber"
                Grid.Row="1"
                Grid.Column="1"
                Width="120"
                Height="22"
                HorizontalAlignment="Left"
                IsEnabled="{Binding ElementName=CheckBoxModifyTags, Path=IsChecked}"
                PrependType="True"
                SelectedItem="{Binding TagTrackNumber, UpdateSourceTrigger=Explicit}"
                TabIndex="3"
                Type="{x:Type core:TagEditAction}" />
            <Label
                x:Name="LabelTrackTitle"
                Grid.Row="2"
                Grid.Column="0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=ComboBoxTrackTitle}" />
            <lex:EnumComboBox
                x:Name="ComboBoxTrackTitle"
                Grid.Row="2"
                Grid.Column="1"
                Width="120"
                Height="22"
                HorizontalAlignment="Left"
                IsEnabled="{Binding ElementName=CheckBoxModifyTags, Path=IsChecked}"
                PrependType="True"
                SelectedItem="{Binding TagTrackTitle, UpdateSourceTrigger=Explicit}"
                TabIndex="4"
                Type="{x:Type core:TagEditAction}" />
            <Label
                x:Name="LabelAlbumTitle"
                Grid.Row="3"
                Grid.Column="0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=ComboBoxAlbumTitle}" />
            <lex:EnumComboBox
                x:Name="ComboBoxAlbumTitle"
                Grid.Row="3"
                Grid.Column="1"
                Width="120"
                Height="22"
                HorizontalAlignment="Left"
                IsEnabled="{Binding ElementName=CheckBoxModifyTags, Path=IsChecked}"
                PrependType="True"
                SelectedItem="{Binding TagAlbumTitle, UpdateSourceTrigger=Explicit}"
                TabIndex="5"
                Type="{x:Type core:TagEditAction}" />
            <Label
                x:Name="LabelAlbumArtist"
                Grid.Row="4"
                Grid.Column="0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=ComboBoxAlbumArtist}" />
            <lex:EnumComboBox
                x:Name="ComboBoxAlbumArtist"
                Grid.Row="4"
                Grid.Column="1"
                Width="120"
                Height="22"
                HorizontalAlignment="Left"
                IsEnabled="{Binding ElementName=CheckBoxModifyTags, Path=IsChecked}"
                PrependType="True"
                SelectedItem="{Binding TagAlbumArtist, UpdateSourceTrigger=Explicit}"
                TabIndex="6"
                Type="{x:Type core:TagEditAction}" />
            <Label
                x:Name="LabelYear"
                Grid.Row="5"
                Grid.Column="0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=ComboBoxYear}" />
            <lex:EnumComboBox
                x:Name="ComboBoxYear"
                Grid.Row="5"
                Grid.Column="1"
                Width="120"
                Height="22"
                HorizontalAlignment="Left"
                IsEnabled="{Binding ElementName=CheckBoxModifyTags, Path=IsChecked}"
                PrependType="True"
                SelectedItem="{Binding TagYear, UpdateSourceTrigger=Explicit}"
                TabIndex="7"
                Type="{x:Type core:TagEditAction}" />
            <Label
                x:Name="LabelLyrics"
                Grid.Row="6"
                Grid.Column="0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=ComboBoxLyrics}" />
            <lex:EnumComboBox
                x:Name="ComboBoxLyrics"
                Grid.Row="6"
                Grid.Column="1"
                Width="120"
                Height="22"
                HorizontalAlignment="Left"
                IsEnabled="{Binding ElementName=CheckBoxModifyTags, Path=IsChecked}"
                PrependType="True"
                SelectedItem="{Binding TagLyrics, UpdateSourceTrigger=Explicit}"
                TabIndex="8"
                Type="{x:Type core:TagEditAction}" />
            <Label
                x:Name="LabelComments"
                Grid.Row="7"
                Grid.Column="0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=ComboBoxComments}" />
            <lex:EnumComboBox
                x:Name="ComboBoxComments"
                Grid.Row="7"
                Grid.Column="1"
                Width="120"
                Height="22"
                HorizontalAlignment="Left"
                IsEnabled="{Binding ElementName=CheckBoxModifyTags, Path=IsChecked}"
                PrependType="True"
                SelectedItem="{Binding TagComments, UpdateSourceTrigger=Explicit}"
                TabIndex="9"
                Type="{x:Type core:TagRemoveAction}" />
        </Grid>
    </Grid>
</UserControl>