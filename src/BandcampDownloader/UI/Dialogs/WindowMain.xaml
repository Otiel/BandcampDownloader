<Window
    x:Class="BandcampDownloader.UI.Dialogs.WindowMain"
    x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:core="clr-namespace:BandcampDownloader.Core"
    Title="Bandcamp Downloader"
    Width="815"
    Height="440"
    MinWidth="815"
    MinHeight="440"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="BandcampDownloader"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    Closing="WindowMain_Closing"
    Icon="pack://application:,,,/Resources/Cloud.ico"
    Loaded="WindowMain_Loaded"
    TextOptions.TextFormattingMode="Display"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>
    <Grid x:Name="GridMain" Margin="10,10,10,10">
        <Grid x:Name="GridUrls" VerticalAlignment="Top">
            <TextBox
                Name="TextBoxUrls"
                Height="111"
                VerticalAlignment="Top"
                AcceptsReturn="True"
                HorizontalScrollBarVisibility="Auto"
                TabIndex="0"
                Text=""
                VerticalScrollBarVisibility="Auto" />
            <TextBlock
                x:Name="TextBoxUrlsPlaceholder"
                Margin="3,1,0,0"
                Foreground="DarkGray"
                IsHitTestVisible="False"
                Text="{lex:Loc}">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=TextBoxUrls}" Value="">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
        <Grid
            x:Name="GridDownloadsPath"
            Margin="0,115,0,0"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label
                Name="LabelDownloadsPath"
                Grid.Column="0"
                Margin="-4,-2,0,0"
                Content="{lex:Loc}"
                Target="{Binding ElementName=TextBoxDownloadsPath}" />
            <TextBox
                Name="TextBoxDownloadsPath"
                Grid.Column="1"
                Height="20"
                TabIndex="1"
                Text="{Binding DownloadsPath}"
                ToolTip="{lex:Loc}"
                ToolTipService.ShowDuration="60000" />
            <Button
                Name="ButtonBrowse"
                Grid.Column="2"
                Width="27"
                Margin="5,0,0,0"
                Click="ButtonBrowse_Click"
                Content="{lex:Loc}"
                TabIndex="2"
                ToolTip="{lex:Loc}" />
        </Grid>
        <CheckBox
            x:Name="CheckBoxDownloadDiscography"
            Margin="0,143,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{lex:Loc}"
            IsChecked="{Binding DownloadArtistDiscography}"
            IsEnabled="True"
            TabIndex="3"
            ToolTip="{lex:Loc}"
            ToolTipService.ShowDuration="60000" />
        <ProgressBar
            Name="ProgressBar"
            Height="18"
            Margin="0,163,0,0"
            VerticalAlignment="Top"
            IsTabStop="False" />
        <RichTextBox
            Name="RichTextBoxLog"
            Margin="0,187,0,30"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            IsReadOnlyCaretVisible="True"
            IsTabStop="False"
            TabIndex="3"
            VerticalScrollBarVisibility="Auto">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0" />
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
        <Grid x:Name="GridActionBar" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label
                x:Name="LabelNewVersion"
                Grid.Column="0"
                Margin="0"
                HorizontalAlignment="Left"
                Content=""
                Cursor="Hand"
                MouseDown="LabelNewVersion_MouseDown"
                Visibility="Hidden">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Theme}" Value="{x:Static core:Skin.Light}">
                                <Setter Property="Foreground" Value="Red" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Theme}" Value="{x:Static core:Skin.Dark}">
                                <Setter Property="Foreground" Value="Orange" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <Label
                x:Name="LabelDownloadSpeed"
                Grid.Column="1"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right"
                Content="" />
            <Label
                x:Name="LabelProgress"
                Grid.Column="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right"
                Content="" />
            <Button
                x:Name="ButtonStart"
                Grid.Column="3"
                Height="24"
                MinWidth="100"
                Padding="10,0"
                Click="ButtonStart_Click"
                Content="{lex:Loc}"
                TabIndex="4" />
            <Button
                x:Name="ButtonStop"
                Grid.Column="4"
                Height="24"
                MinWidth="100"
                Margin="5,0,0,0"
                Padding="10,0"
                Click="ButtonStop_Click"
                Content="{lex:Loc}"
                IsEnabled="False"
                TabIndex="5" />
            <Button
                x:Name="ButtonOpenSettingsWindow"
                Grid.Column="5"
                Height="24"
                MinWidth="100"
                Margin="5,0,0,0"
                Padding="10,0"
                Click="ButtonOpenSettingsWindow_Click"
                Content="{lex:Loc}"
                TabIndex="6"
                ToolTip="{lex:Loc}" />
        </Grid>
    </Grid>
</Window>